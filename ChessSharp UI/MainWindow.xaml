<Window x:Class="ChessSharp_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessSharp_UI"
        mc:Ignorable="d"
        Title="ChessSharp" Height="590" Width="910" Icon="Images/Icons-40x40-BlackKing.png" WindowStartupLocation="CenterScreen" Cursor="Arrow"  >
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFDEDBC5" Offset="0"/>
            <GradientStop Color="White" Offset="0.131"/>
            <GradientStop Color="#FF443044" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <local:GameUserControl x:Name="GameUserControl" Margin="0,0,0,0" Height="590" VerticalAlignment="Top" HorizontalAlignment="Left" Width="905"/>
        <Button x:Name="BtnNewGameWhite" Content="New Game as White" HorizontalAlignment="Left" Margin="10,519,0,0" VerticalAlignment="Top" Width="130" Click="BtnNewGameWhite_Click"/>
        <Button x:Name="BtnNewGameBlack" Content="New Game as Black" HorizontalAlignment="Left" Margin="320,519,0,0" VerticalAlignment="Top" Width="130" Click="BtnNewGameBlack_Click"/>
    </Grid>
</Window>
