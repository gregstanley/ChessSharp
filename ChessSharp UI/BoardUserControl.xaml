        </Grid>
        <Canvas x:Name="BoardCanvas" Height="346" Width="346" MouseDown="BoardCanvas_MouseDown" MouseUp="BoardCanvas_MouseUp" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle x:Name="CanvasShape" Width="346" Height="346" Fill="FloralWhite" Opacity="0.3" />
        </Canvas>
        <Label x:Name="FromLabel" Content="From" VerticalAlignment="Bottom" />
        <Label x:Name="ToLabel" Content="To" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
