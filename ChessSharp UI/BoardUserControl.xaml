            <Rectangle Width="42" Height="42" Fill="LightSlateGray" Grid.Column="3" Grid.Row="4" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="FloralWhite" Grid.Column="4" Grid.Row="4" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="LightSlateGray" Grid.Column="5" Grid.Row="4" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="FloralWhite" Grid.Column="6" Grid.Row="4" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="LightSlateGray" Grid.Column="7" Grid.Row="4" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="LightSlateGray" Grid.Row="5" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="FloralWhite" Grid.Column="1" Grid.Row="5" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="LightSlateGray" Grid.Column="2" Grid.Row="5" Opacity="0.75"  />
            <Rectangle Width="42" Height="42" Fill="FloralWhite" Grid.Column="3" Grid.Row="5" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="LightSlateGray" Grid.Column="4" Grid.Row="5" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="FloralWhite" Grid.Column="5" Grid.Row="5" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="LightSlateGray" Grid.Column="6" Grid.Row="5" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="FloralWhite" Grid.Column="7" Grid.Row="5" Opacity="0.75" />
