            <Rectangle Width="42" Height="42" Fill="LightSlateGray" Grid.Column="7" Grid.Row="6" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="LightSlateGray" Grid.Row="7" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="FloralWhite" Grid.Column="1" Grid.Row="7" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="LightSlateGray" Grid.Column="2" Grid.Row="7" Opacity="0.75"  />
            <Rectangle Width="42" Height="42" Fill="FloralWhite" Grid.Column="3" Grid.Row="7" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="LightSlateGray" Grid.Column="4" Grid.Row="7" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="FloralWhite" Grid.Column="5" Grid.Row="7" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="LightSlateGray" Grid.Column="6" Grid.Row="7" Opacity="0.75" />
            <Rectangle Width="42" Height="42" Fill="FloralWhite" Grid.Column="7" Grid.Row="7" Opacity="0.75" />

        </Grid>

        <Rectangle x:Name="BoardSquareOverlayRectangle" Width="336" Height="336" Opacity="0.2" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Rectangle.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF3D3E38" Offset="1"/>
                    <GradientStop Color="#FFF5FFDC"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Canvas x:Name="BoardCanvas" Height="346" Width="346" HorizontalAlignment="Left" VerticalAlignment="Top">

        </Canvas>

        <Label x:Name="FromLabel" Content="From" VerticalAlignment="Bottom" />
        <Label x:Name="ToLabel" Content="To" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
        
        <local:PromotionTypeSelectorUserControl x:Name="PromotionUserControl" HorizontalAlignment="Center" Height="60" Margin="0,0,0,0" VerticalAlignment="Center" Width="225"/>

    </Grid>
</UserControl>
