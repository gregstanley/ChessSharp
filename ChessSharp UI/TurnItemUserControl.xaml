<UserControl x:Class="ChessSharp_UI.TurnItemUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessSharp_UI"
             mc:Ignorable="d" Height="20" Width="108">
    <Grid Margin="0,0,0,0" Height="20" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Label x:Name="TurnNumberLabel" Grid.Column="0" Content="1." HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Width="108" Margin="-4,-4,0,0"/>
        <Button x:Name="WhiteMoveButton" Grid.Column="1" Content="Button" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="44" Background="{x:Null}" BorderBrush="#FFDFD8FF" />
        <Button x:Name="BlackMoveButton" Grid.Column="2" Content="Button" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="44" Background="{x:Null}" BorderBrush="#FFDFD8FF" Margin="4,0,0,0"/>
    </Grid>
</UserControl>
