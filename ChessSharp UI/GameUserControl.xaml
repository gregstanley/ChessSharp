<UserControl x:Class="ChessSharp_UI.GameUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessSharp_UI"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Width="800" Height="500" Margin="0,0,0,0" Stroke="Black" VerticalAlignment="Top" >
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF404040" Offset="0"/>
                    <GradientStop Color="#FF404040" Offset="1"/>
                    <GradientStop Color="White" Offset="0.195"/>
                    <GradientStop Color="#FFE7DCFF" Offset="0.771"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <local:BoardUserControl x:Name="BoardUserControl" HorizontalAlignment="Left" Width="346" Height="346" Margin="25,41,0,0" VerticalAlignment="Top" Background="Black" PieceMoved="BoardUserControl_PieceMoved" PromotionTypeSelected="BoardUserControl_PieceSelected" >
            <local:BoardUserControl.Effect>
                <DropShadowEffect ShadowDepth="10" BlurRadius="10" RenderingBias="Quality" Color="#FF666666"/>
            </local:BoardUserControl.Effect>
        </local:BoardUserControl>
        <Label x:Name="HalfTurnCountLabel" Content="1" HorizontalAlignment="Left" Margin="532,46,0,0" VerticalAlignment="Top" Width="38" />
        <Image x:Name="WhiteCastleQueenSide" HorizontalAlignment="Left" Height="32" Margin="98,390,0,0" VerticalAlignment="Top" Width="32" Source="Images/iconfinder_gnome-session-switch_30685.png">
            <Image.Effect>
                <DropShadowEffect Color="#FF8B8B8B" ShadowDepth="2"/>
            </Image.Effect>
        </Image>
        <Image x:Name="WhiteCastleKingSide" HorizontalAlignment="Left" Height="32" Margin="266,390,0,0" VerticalAlignment="Top" Width="32" Source="Images/iconfinder_gnome-session-switch_30685.png">
            <Image.Effect>
                <DropShadowEffect Color="#FF8B8B8B" ShadowDepth="2"/>
            </Image.Effect>
        </Image>
        <Image x:Name="BlackCastleQueenSide" HorizontalAlignment="Left" Height="32" Margin="98,7,0,0" VerticalAlignment="Top" Width="32" Source="Images/iconfinder_gnome-session-switch_30685.png">
            <Image.Effect>
                <DropShadowEffect Color="#FF8B8B8B" ShadowDepth="2"/>
            </Image.Effect>
        </Image>
        <Image x:Name="BlackCastleKingSide" HorizontalAlignment="Left" Height="32" Margin="266,7,0,0" VerticalAlignment="Top" Width="32" Source="Images/iconfinder_gnome-session-switch_30685.png">
            <Image.Effect>
                <DropShadowEffect Color="#FF8B8B8B" ShadowDepth="2"/>
            </Image.Effect>
        </Image>
        <Label x:Name="FullTurnNumberLabel" Content="1" HorizontalAlignment="Left" Margin="444,46,0,0" VerticalAlignment="Top" Width="38" />
        <Label x:Name="EvaluationLabel" Content="0" HorizontalAlignment="Left" Margin="154,10,0,0" VerticalAlignment="Top" Width="90" />
        <TextBox x:Name="OutputTextBox" HorizontalAlignment="Left" Height="95" Margin="391,292,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="285" Background="#FF2B2B2B" Foreground="#FFA3D3CC"/>
        <TextBlock x:Name="InfoTimeTextBlock" HorizontalAlignment="Left" Margin="391,98,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="131" Height="101"/>
        <TextBlock x:Name="InfoTtTextBlock" HorizontalAlignment="Left" Margin="537,98,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="139" Height="101"/>
        <TextBlock x:Name="InfoPvTextBlock" HorizontalAlignment="Left" Margin="391,204,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="285" Height="32"/>
        <TextBlock x:Name="InfoPvTextBlock2" HorizontalAlignment="Left" Margin="391,241,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="285" Height="32"/>
        <Label x:Name="HalfTurnCountLabel1" Content="Half turns:" HorizontalAlignment="Left" Margin="472,46,0,0" VerticalAlignment="Top"/>
        <Label x:Name="FullTurnsCountLabel" Content="Full turns:" HorizontalAlignment="Left" Margin="386,46,0,0" VerticalAlignment="Top"/>
        <Label x:Name="TimerInfo" Content="Timer:" HorizontalAlignment="Left" Margin="386,72,0,0" VerticalAlignment="Top"/>
        <Label x:Name="TtInfo" Content="TT:" HorizontalAlignment="Left" Margin="532,72,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.52,0.538"/>
        <TextBox x:Name="FenTextBox" HorizontalAlignment="Left" Height="23" Margin="25,425,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="457" Background="#FFE6E6E6" Foreground="#FF303068" Text="rnbqkbnr/pppppppp/8/8/8/8/PPPPPPPP/RNBQKBNR w KQkq - 0 1"/>
        <Button x:Name="GoBtn" Content="Go" HorizontalAlignment="Left" Margin="296,461,0,0" VerticalAlignment="Top" Width="75" Click="GoBtn_Click"/>

    </Grid>
</UserControl>
