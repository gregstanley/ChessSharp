            <Rectangle x:Name="F8" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="5" Opacity="0.75" />
            <Rectangle x:Name="G8" Width="42" Height="42" Fill="FloralWhite" Grid.Column="6" Opacity="0.75" />
            <Rectangle x:Name="H8" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="7" Opacity="0.75" />
            <Rectangle x:Name="A7" Width="42" Height="42" Fill="LightSlateGray" Grid.Row="1" Opacity="0.75" />
            <Rectangle x:Name="B7" Width="42" Height="42" Fill="FloralWhite" Grid.Column="1" Grid.Row="1" Opacity="0.75" />
            <Rectangle x:Name="C7" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="2" Grid.Row="1" Opacity="0.75"  />
