            <Rectangle x:Name="G7" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="6" Grid.Row="1" Opacity="0.75" />
            <Rectangle x:Name="H7" Width="42" Height="42" Fill="FloralWhite" Grid.Column="7" Grid.Row="1" Opacity="0.75" />
            <Rectangle x:Name="A6" Width="42" Height="42" Fill="FloralWhite" Grid.Column="0" Grid.Row="2" Opacity="0.75" />
            <Rectangle x:Name="B6" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="1" Grid.Row="2" Opacity="0.75" />
