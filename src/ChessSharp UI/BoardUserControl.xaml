            <Rectangle x:Name="H5" Width="42" Height="42" Fill="FloralWhite" Grid.Column="7" Grid.Row="3" Opacity="0.75" />
            <Rectangle x:Name="A4" Width="42" Height="42" Fill="FloralWhite" Grid.Column="0" Grid.Row="4" Opacity="0.75" />
            <Rectangle x:Name="B4" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="1" Grid.Row="4" Opacity="0.75" />
            <Rectangle x:Name="C4" Width="42" Height="42" Fill="FloralWhite" Grid.Column="2" Grid.Row="4" Opacity="0.75"  />
            <Rectangle x:Name="D4" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="3" Grid.Row="4" Opacity="0.75" />
