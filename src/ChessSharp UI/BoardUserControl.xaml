            <Rectangle x:Name="D2" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="3" Grid.Row="6" Opacity="0.75" />
            <Rectangle x:Name="E2" Width="42" Height="42" Fill="FloralWhite" Grid.Column="4" Grid.Row="6" Opacity="0.75" />
            <Rectangle x:Name="F2" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="5" Grid.Row="6" Opacity="0.75" />
            <Rectangle x:Name="G2" Width="42" Height="42" Fill="FloralWhite" Grid.Column="6" Grid.Row="6" Opacity="0.75" />
            <Rectangle x:Name="H2" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="7" Grid.Row="6" Opacity="0.75" />
            <Rectangle x:Name="A1" Width="42" Height="42" Fill="LightSlateGray" Grid.Row="7" Opacity="0.75" />
            <Rectangle x:Name="B1" Width="42" Height="42" Fill="FloralWhite" Grid.Column="1" Grid.Row="7" Opacity="0.75" />
            <Rectangle x:Name="C1" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="2" Grid.Row="7" Opacity="0.75"  />
            <Rectangle x:Name="D1" Width="42" Height="42" Fill="FloralWhite" Grid.Column="3" Grid.Row="7" Opacity="0.75" />
            <Rectangle x:Name="E1" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="4" Grid.Row="7" Opacity="0.75" />
            <Rectangle x:Name="F1" Width="42" Height="42" Fill="FloralWhite" Grid.Column="5" Grid.Row="7" Opacity="0.75" />
            <Rectangle x:Name="G1" Width="42" Height="42" Fill="LightSlateGray" Grid.Column="6" Grid.Row="7" Opacity="0.75" />
            <Rectangle x:Name="H1" Width="42" Height="42" Fill="FloralWhite" Grid.Column="7" Grid.Row="7" Opacity="0.75" />

        </Grid>

        <Rectangle x:Name="BoardSquareOverlayRectangle" Width="336" Height="336" Opacity="0.2" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Rectangle.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF3D3E38" Offset="1"/>
                    <GradientStop Color="#FFF5FFDC"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Canvas x:Name="BoardCanvas" Height="346" Width="346" HorizontalAlignment="Left" VerticalAlignment="Top">

        </Canvas>

        <Label x:Name="FromLabel" Content="From" VerticalAlignment="Bottom" />
        <Label x:Name="ToLabel" Content="To" VerticalAlignment="Bottom" HorizontalAlignment="Right" />

        <local:PromotionTypeSelectorUserControl x:Name="PromotionUserControl" HorizontalAlignment="Center" Height="60" Margin="0,0,0,0" VerticalAlignment="Center" Width="225"/>

        <Label x:Name="IllegalMoveLabel" Content="Illegal" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="48" Background="#00000000">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FFD64949" Offset="0.003"/>
                </LinearGradientBrush>
            </Label.Foreground>
            <Label.Effect>
                <DropShadowEffect Opacity="0.8" ShadowDepth="3" RenderingBias="Quality" Direction="328"/>
            </Label.Effect>
        </Label>

        <Label x:Name="ThinkingLabel" Content="Thinking..." HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="48" Background="#00000000">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FFD6D649" Offset="0.003"/>
                </LinearGradientBrush>
            </Label.Foreground>
            <Label.Effect>
                <DropShadowEffect Opacity="0.8" ShadowDepth="3" RenderingBias="Quality" Direction="328"/>
            </Label.Effect>
        </Label>
        
        <Label x:Name="CheckmateLabel" Content="Checkmate" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="48" Background="#00000000" FontStyle="Italic" FontWeight="Bold" FontStretch="Expanded">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF95FFDD" Offset="1"/>
                    <GradientStop Color="#FF1EA2BF" Offset="0.008"/>
                </LinearGradientBrush>
            </Label.Foreground>
            <Label.Effect>
                <DropShadowEffect Opacity="0.8" RenderingBias="Quality" Direction="328" ShadowDepth="4" BlurRadius="6"/>
            </Label.Effect>
        </Label>
        
        <Label x:Name="DrawLabel" Content="Draw" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" FontSize="48" Background="#00000000" FontStyle="Italic" FontWeight="Bold" FontStretch="Expanded">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF95FFDD" Offset="1"/>
                    <GradientStop Color="#FF1EA2BF" Offset="0.008"/>
                </LinearGradientBrush>
            </Label.Foreground>
            <Label.Effect>
                <DropShadowEffect Opacity="0.8" RenderingBias="Quality" Direction="328" ShadowDepth="4" BlurRadius="6"/>
            </Label.Effect>
        </Label>
        
    </Grid>
</UserControl>
